{
	"compilerOptions": {
	  "target": "ES2022",
	  "module": "commonjs",
	  "lib": ["ES2022"],
	  "rootDir": "src",
	  "outDir": "out",
	  "sourceMap": true,
	  "strict": true,
	  "esModuleInterop": true,
	  "moduleResolution": "node",
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "baseUrl": "src",
		"paths": {
			"*": ["*"]
		}
	},
	"include": ["src"]
  }
  